{
  "name": "saas-platform",
  "private": true,
  "packageManager": "bun@1.1.10",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:generate": "cd packages/db && bunx drizzle-kit generate",
    "db:migrate": "cd packages/db && bunx drizzle-kit migrate",
    "db:push": "cd packages/db && bunx drizzle-kit push:pg",
    "db:studio": "cd packages/db && bunx drizzle-kit studio",
    "reset": "rm -rf node_modules .turbo && bun install",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.91.3",
    "@vitest/ui": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.2",
    "@neondatabase/serverless": "^1.0.2",
    "@tanstack/react-query": "^5.90.20",
    "@trpc/client": "^11.9.0",
    "@trpc/next": "^11.9.0",
    "@trpc/react-query": "^11.9.0",
    "@trpc/server": "^11.9.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.18.0",
    "superjson": "^2.2.6",
    "zod": "^4.3.6"
  }
}
